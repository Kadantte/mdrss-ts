		"koa-mount": "^4.0.0",
		"koa-router": "^10.1.1",
		"koa-static": "^5.0.0"
	},
	"devDependencies": {
		"@types/koa": "^2.13.4",
		"@types/koa-mount": "^4.0.1",
		"@types/koa-router": "^7.4.4",
		"@types/koa-static": "^4.0.2",
		"@types/node": "^16.7.2",
		"prettier": "^2.3.2",
